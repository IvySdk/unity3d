<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:layout_gravity="center"
    android:background="#e8000000"
    android:orientation="horizontal"
    android:tag="_animation">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="10">

        <androidx.viewpager.widget.ViewPager
            android:layout_width="180dp"
            android:layout_height="310dp"
            android:layout_gravity="center"
            android:layout_margin="9dp"
            android:contentDescription="@null"
            android:tag="pager"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="320dp"
            android:layout_gravity="center"
            android:src="@drawable/android_sdk_dialog_frame"
            android:contentDescription="@null"
            android:tag="frame"/>

        <com.ivy.ads.ui.PagerIndicator
            android:tag="indicator"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="12dp"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="10">
        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_gravity="right|top"
            android:layout_marginBottom="4dp"
            android:background="@drawable/android_sdk_btn_close"
            android:contentDescription="@null"
            android:tag="closebtn"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="3"
                android:ems="16"
                android:gravity="center"
                android:tag="title2"
                android:text="@string/android_sdk_guess_you_like"
                android:textColor="#ffffff">
            </TextView>

            <ImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:tag="icon"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:layout_weight="3"
                android:ems="16"
                android:gravity="center"
                android:tag="title"
                android:text="@string/android_sdk_exit_confirm"
                android:textColor="#888888">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="10"
                    android:gravity="center"
                    android:padding="10dp"
                    android:tag="yesbtn"
                    android:text="@string/android_sdk_exit"
                    android:textColor="#888888" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="20"
                    android:background="@drawable/android_sdk_download_bg"
                    android:padding="10dp"
                    android:tag="morebtn"
                    android:text="@string/android_sdk_more"
                    android:textColor="#ffffff" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>